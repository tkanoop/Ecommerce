                        <div class="text-center mt-4">
                            <h1>User Details</h1>
                        </div>
                        
                    </section>
                    <section class="mt-2 ">
                        <% if (details!=null){ %>
                        <table id="example" class="table mt-5 table-hover table-light">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>EMail</th>
                                    <th>Mobile</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% details.forEach(function(item){ %>
                                    <tr>
                                        <td><%=item.yourname%></td>
                                        <td><%=item.email%></td>
                                        <td><%=item.mobile%></td>
                                        <td><%=item.gender%></td>
                                        
                                           <td>    
                                            <% if(item.status==true) {%>
                                                <a class="add " href="/admin/updateUser?id=<%= item._id%>" style="text-decoration: none; ">
                                                    <button type="button" class="btn btn-danger "
                                                        style="width: 90px; ">Block</button></a>
                                            <%}else{%>
                                                <a class="add" href="/admin/updateUser?id=<%= item._id%>" style="text-decoration: none; ">
                                                    <button type="button" class="btn btn-success "
                                                        style="width: 90px; ">Unlist</button></a>
                                            <%}%>
                
                                            </td>
                                    
                                    </tr>
                                    <%})%>
                                </tbody>
                                <%}%>
                            </table>
                      
                    </section>
